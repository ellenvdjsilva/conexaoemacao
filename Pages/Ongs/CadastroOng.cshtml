@page
@model conexaoemacao.Pages.Ongs.CadastroOngModel

@{
    ViewData["Title"] = "CadastroOng";
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header badge bg-gradient-primary-to-secondary">
                    <h4 class="text-center">Cadastre sua ONG</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Ong.Name" class="control-label"></label>
                            <input asp-for="Ong.Name" class="form-control" />
                            <span asp-validation-for="Ong.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ong.Descricao" class="control-label"></label>
                            <input asp-for="Ong.Descricao" class="form-control" />
                            <span asp-validation-for="Ong.Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ong.Telefone" class="control-label"></label>
                            <input asp-for="Ong.Telefone" class="form-control" />
                            <span asp-validation-for="Ong.Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ong.Email" class="control-label"></label>
                            <input asp-for="Ong.Email" class="form-control" />
                            <span asp-validation-for="Ong.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ong.Site" class="control-label"></label>
                            <input asp-for="Ong.Site" class="form-control" />
                            <span asp-validation-for="Ong.Site" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ong.CNPJ" class="control-label"></label>
                            <input asp-for="Ong.CNPJ" class="form-control" />
                            <span asp-validation-for="Ong.CNPJ" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ong.Segmento" class="control-label"></label>
                            <input asp-for="Ong.Segmento" class="form-control" />
                            <span asp-validation-for="Ong.Segmento" class="text-danger"></span>
                        </div>
                        <div class="mt-3 form-group text-center">
                            <input type="submit" value="Enviar" class="btn btn-outline-dark mt-auto " />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
