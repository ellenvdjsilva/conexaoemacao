<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - conexaoemacao</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/assets/logo.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" asp-append-version="true" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/conexaoemacao.styles.css" asp-append-version="true" />
</head>
        <body class="d-flex flex-column h-100">
            <main class="flex-shrink-0">
                <!-- Navigation-->
                <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
                    <div class="container px-5">
                        <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                            <div>
                                 <img src="~/assets/toplogocema.png" class=" align-content-md-start" style="width: 150px;" />
                            </div>
                            <h6 class="fw-bolder text-start text-gradient d-inline">
                        Conexão em Ação</h6>
                        </div>
               
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                                <li class="nav-item"><a class="nav-link" href="/Index/#sobre">Sobre</a></li>
                                <li class="nav-item"><a class="nav-link" asp-page="/Ongs/Index">Ong's</a></li>
                                <li class="nav-item"><a class="nav-link" asp-page="/Vagas/Index">Vagas</a></li>
                                <li class="nav-item"><a class="nav-link" asp-page="/Entrar">Entrar</a></li>
                            </ul>
                        </div>
                    </div>
                </nav>

                @RenderBody()
            </main>
            <!-- Footer-->
    <footer class="text-center py-3 my-4 border-top">
        <div class="container p-4 pb-0">
            <div class="row">
                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <div class="text-center mb-3">
                        <img src="~/assets/toplogocema.png" alt="Logo" style="width: 140px;" />
                    </div>
                    <h6 class="fw-bolder text-center text-gradient">
                        <span class="align-middle text-gradient d-inline">Conexão em Ação</span>
                    </h6>
                </div>

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3 align-content-center">
                    <h6 class="text-center font-weight-bold">Contato:</h6>
                    <p>conexaoemacao@gmail.com</p>
                    <p><i class="bi bi-telephone-fill me-2 text-gradient"></i>(11) 5551-5551</p>
                </div>

                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="font-weight-bold">Siga-nos</h6>
                    <div class="d-flex justify-content-center">
                        <a class=" mb-2 text-gradient d-inline-block" href="https://www.facebook.com/ConexaoEmAcao">
                            <i class="bi bi-facebook me-2 text-gradient"></i>
                        </a>
                        <a class="mb-2 text-gradient d-inline-block" href="https://www.instagram.com/_conexaoemacao/?igshid=MzRlODBiNWFlZA%3D%3D">
                            <i class="bi bi-instagram  mt-3 me-2 text-gradient"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

            <!-- Bootstrap core JS-->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>   
            <!-- Core theme JS-->
            <script src="~/js/scripts.js"></script>
            @RenderSection("Scripts", false)
        </body>
</html>
