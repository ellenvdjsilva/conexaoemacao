@page
@model conexaoemacao.Pages.CadastroOngModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header badge bg-gradient-primary-to-secondary">
                    <h4 class="text-center">Cadastre sua ONG</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="inputName">Nome:</label>
                                <input type="text" class="form-control" id="inputName" placeholder="Name" />
                            </div>
                            <div class="form-group">
                                <label for="telefone">Telefone:</label>
                                <input type="tel" class="form-control" id="telefone" name="telefone" pattern="\(d{2})\d{5}-\d{4}" placeholder="(00)00000-0000" required>
                            </div>

                            <div class="form-group">
                                <label for="cpf">CNPJ:</label>
                                <input type="text" class="form-control" id="cpf" name="cpf" pattern="\d{2}\.\d{3}\.\d{3}/\d{4}-\d{2}\" placeholder="00.000.000/0000-00" required>
                            </div>
                            <div class="form-group">
                                <label for="cep">CEP:</label>
                                <input type="text" class="form-control" id="cep" name="cep" pattern="\d{5}-\d{3}" placeholder="00000-000" required>

                            </div>
                            <div class="form-group">
                                <label for="cidade">Cidade: </label>
                                <input type="text" class="form-control" id="cidade" name="cidade" required />

                            </div>
                            <div class="form-group">
                                <label for="segmento" class="form-label">Segmento:</label>
                                <select class="form-select" name="segmento" id="segmento">
                                    <option value="caes">Resgate de caes</option>
                                    <option value="ambt">Meio ambiente</option>
                                    <option value="social">Assistencia Social</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="caixaTexto">Fale sobre a ONG:</label>
                                <textarea class="form-control" id="caixaTexto" name="caixaTexto" rows="5" cols="50"></textarea>
                            </div>
                            <div class="mt-3 text-center">
                                <button type="submit" class="btn btn-outline-dark">Enviar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
