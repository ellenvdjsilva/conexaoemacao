@page
@model conexaoemacao.Pages.Vagas.IndexModel

@{
    ViewData["Title"] = "Index";
}
<!-- Section-->
<section class="py-5">
    <div class="row gx-5 justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="text-center">
                <h2 class="fw-bolder text-gradient d-inline">Conheça as vagas disponíveis para voluntariado.</h2>
                <p class="lead fw-normal text-muted mb-5">Junte-se a nós e faça parte desta incrível rede. Venha fazer a diferença!</p>
            </div>
        </div>
    </div>
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
         @foreach (var item in Model.Vaga) {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="~/assets/vagavivenda.png" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="">@Html.DisplayNameFor(model => model.Vaga[0].Titulo)</h5>
                                <p>@Html.DisplayFor(modelItem => item.Cargo)</p>
                                <p>
                                    @Html.DisplayFor(modelItem => item.Sobre)
                                </p>
                                <p>@Html.DisplayNameFor(model => model.Vaga[0].Quantidade_vaga)</p>

                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-page="CadastroVoluntario">Aplicar a vaga</a></div>
                        </div>
                    </div>
                </div>
        }
        </div>
    </div>
</section>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vaga[0].OngId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaga[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaga[0].Sobre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaga[0].Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaga[0].Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaga[0].Quantidade_vaga)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vaga) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OngId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade_vaga)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
