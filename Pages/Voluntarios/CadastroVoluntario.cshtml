@page
@model conexaoemacao.Pages.Voluntarios.CadastroVoluntarioModel

@{
    ViewData["Title"] = "CadastroVoluntario";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header badge bg-gradient-primary-to-secondary">
                    <h4 class="text-center">Cadastre-se para ser um voluntario</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Voluntario.Nome" class="control-label"></label>
                            <input asp-for="Voluntario.Nome" class="form-control" />
                            <span asp-validation-for="Voluntario.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Voluntario.Idade" class="control-label"></label>
                            <input asp-for="Voluntario.Idade" class="form-control" />
                            <span asp-validation-for="Voluntario.Idade" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Voluntario.CPF" class="control-label"></label>
                            <input asp-for="Voluntario.CPF" class="form-control" />
                            <span asp-validation-for="Voluntario.CPF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Voluntario.Telefone" class="control-label"></label>
                            <input asp-for="Voluntario.Telefone" class="form-control" />
                            <span asp-validation-for="Voluntario.Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Voluntario.Email" class="control-label"></label>
                            <input asp-for="Voluntario.Email" class="form-control" />
                            <span asp-validation-for="Voluntario.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Voluntario.MensagemdeDescr" class="control-label"></label>
                            <input asp-for="Voluntario.MensagemdeDescr" class="form-control" />
                            <span asp-validation-for="Voluntario.MensagemdeDescr" class="text-danger"></span>
                        </div>
                        <div class="mt-3 form-group text-center">
                            <input type="submit" value="Enviar" class="btn btn-outline-dark mt-auto " />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
